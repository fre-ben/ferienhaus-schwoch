---
import { Icon } from 'astro-icon/components';
import { Button, CustomerQuoteSection } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import TextAndImageHero from '../components/sections/heros/TextAndImageHero.astro';
import BookTodaySection from '@components/sections/BookTodaySection.astro';
import { Image } from 'astro:assets';

const image = await Astro.glob('../../public/assets/images/streifen.png').then(
  (images) => {
    return images.map((image) => image.default);
  },
);

const seo = {
  title: 'Böllenhäuschen | Ferienhaus in Hollenstedt',
  description:
    'Böllenhäuschen - Ihr gemütliches Ferienhaus in Hollenstedt. Entspannen Sie im Leinetal und erleben Sie erholsame Tage fernab vom Alltagsstress.',
};
---

<Layout {seo}>
  <Image src={image[0]} alt="" class="image" />
  <TextAndImageHero reversed>
    <div slot="text-container">
      <h1>Böllenhäuschen</h1>
      <p>
        Genießen Sie Ihren Urlaub im Böllenhäuschen, unserem gemütlichen
        Ferienhaus in Hollenstedt. <br />Entspannen Sie im Leinetal und erleben
        Sie erholsame Tage fernab vom Alltagsstress.
      </p>
    </div>
    <div slot="btns-container">
      <Button href="/preise" customIcon
        >Zu den Preisen <Fragment slot="icon">
          <Icon name="ic:baseline-chevron-right" />
        </Fragment></Button
      >
    </div>
    <picture slot="image-container">
      <img
        src="/assets/images/ebay/2.jpeg"
        alt="Foto vom Ferienhaus Böllenhäuschen"
      />
    </picture>
  </TextAndImageHero>

  <CustomerQuoteSection
    quoteText="Wir hatten das Glück, ein paar Tage im bezaubernden Böllenhäuschen in Hollenstedt zu verbringen, und es war eine Erfahrung, die wir nicht so schnell vergessen werden."
    customerName="Michael & Sarah"
  />

  <BookTodaySection />
</Layout>

<style lang="scss">
  h1 {
    word-break: unset;
    word-wrap: unset;
    overflow-wrap: unset;
  }

  .image {
    height: auto;
  }

  @media (max-width: 600px) {
    h1 {
      word-break: break-word; /* Allow breaking within words */
      word-wrap: break-word; /* Allow wrapping within words */
      overflow-wrap: break-word; /* Ensures compatibility with all browsers */
    }
  }
</style>
